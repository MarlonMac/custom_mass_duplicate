<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_duplicate_wizard_form" model="ir.ui.view">
        <field name="name">product.duplicate.wizard.form</field>
        <field name="model">product.duplicate.wizard</field>
        <field name="arch" type="xml">
            <form string="Duplicate Products to Company">
                <group>
                    <field name="target_company_id"/>
                    <field name="target_website_id"/>
                </group>
                <footer>
                    <button name="action_duplicate_products" string="Duplicate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_product_duplicate_wizard" model="ir.actions.act_window">
        <field name="name">Duplicate to Company</field>
        <field name="res_model">product.duplicate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>