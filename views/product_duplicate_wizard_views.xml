<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_duplicate_wizard_form" model="ir.ui.view">
        <field name="name">product.duplicate.wizard.form</field>
        <field name="model">product.duplicate.wizard</field>
        <field name="arch" type="xml">
            <form string="Duplicate Products to Company">
                <group>
                    <group>
                        <field name="target_company_id"/>
                        <field name="target_website_id"/>
                        <field name="copy_cost"/>
                    </group>
                    <group>
                        <separator string="Sale Price Adjustment"/>
                        <field name="apply_price_markup"/>
                        <field name="price_markup_percent"
                               attrs="{'invisible': [('apply_price_markup', '=', False)], 'required': [('apply_price_markup', '=', True)]}"/>
                    </group>
                </group>
                
                <group string="Currency Conversion" name="currency_info"
                       attrs="{'invisible': [('conversion_needed', '=', False)]}">
                    <field name="conversion_needed" invisible="1"/>
                    <field name="rate_display" colspan="2"/>
                    
                    <field name="use_manual_rate" colspan="2"/>
                    
                    <field name="manual_rate_type" widget="radio" nolabel="1"
                           attrs="{'invisible': [('use_manual_rate', '=', False)]}"/>
                    <field name="manual_rate"
                           attrs="{'invisible': [('use_manual_rate', '=', False)], 'required': [('use_manual_rate', '=', True)]}"/>
                </group>
                
                <footer>
                    <button name="action_duplicate_products" string="Duplicate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_product_duplicate_wizard" model="ir.actions.act_window">
        <field name="name">Duplicate to Company</field>
        <field name="res_model">product.duplicate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(4, ref('custom_mass_duplicate.group_mass_product_duplicator'))]"/>
    </record>

</odoo>